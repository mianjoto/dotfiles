{
    // appearance
    "breadcrumbs.enabled": false,
    "catppuccin-icons.hidesExplorerArrows": true,
    "catppuccin-icons.specificFolders": false,
    "catppuccin.accentColor": "red",
    "catppuccin.syncWithIconPack": false,
    "catppuccin.workbenchMode": "minimal",
    "editor.fontFamily": "MesloLGM Nerd Font",
    "editor.lineNumbers": "relative",
    "editor.minimap.enabled": false,
    "editor.scrollbar.horizontal": "hidden",
    "editor.scrollbar.horizontalScrollbarSize": 0,
    "editor.scrollbar.vertical": "hidden",
    "editor.scrollbar.verticalScrollbarSize": 0,
    "editor.semanticHighlighting.enabled": true,
    "editor.stickyScroll.enabled": false,
    "editor.tabSize": 4,
    "extensions.autoCheckUpdates": false,
    "extensions.autoUpdate": false,
    "extensions.ignoreRecommendations": true,
    "terminal.integrated.minimumContrastRatio": 1,
    "window.commandCenter": false,
    "window.customTitleBarVisibility": "auto",
    "window.menuBarVisibility": "toggle",
    "window.titleBarStyle": "custom",
    "window.zoomLevel": 3,
    "workbench.activityBar.location": "top",
    "workbench.colorTheme": "Catppuccin Mocha",
    "workbench.editor.tabSizing": "shrink",
    "workbench.iconTheme": "catppuccin-latte",
    "workbench.layoutControl.enabled": false,
    "workbench.sideBar.location": "right",
    // formatting
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "[javascript][javascriptreact][typescript][typescriptreact]": {
        "editor.codeActionsOnSave": {
            "source.fixAll.eslint": "always"
        }
    },
    "[snippets]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    // prettier extension settings
    "prettier.tabWidth": 4,
    // vim extension settings
    "vim.highlightedyank.color": "#b4befe",
    "vim.highlightedyank.enable": true,
    "vim.leader": "<Space>",
    "vim.showmodename": false,
    "vim.useSystemClipboard": true,
    "vim.visualstar": true,
    "vim.insertModeKeyBindings": [
        // bind jj to return to normal mode
        {
            "before": ["j", "j"],
            "after": ["<Esc>"]
        }
    ],
    "vim.normalModeKeyBindings": [
        // bind :: to open command palette
        {
            "before": [":", ":"],
            "commands": ["workbench.action.showCommands"],
            "silent": true
        }
    ]
}
